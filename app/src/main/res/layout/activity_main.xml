<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ringing Mode"
        android:id="@+id/mySwitch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="76dp"
        android:switchMinWidth="50sp"
        android:switchPadding="@dimen/abc_action_bar_stacked_tab_max_width"
         />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wifi Mode"
        android:id="@+id/wifiSwitch"
        android:switchPadding="@dimen/abc_action_bar_stacked_tab_max_width"
        android:switchMinWidth="50sp"

        android:layout_marginTop="53dp"
        android:layout_below="@+id/mySwitch"
        android:layout_alignLeft="@+id/mySwitch"
        android:layout_alignStart="@+id/mySwitch"
        android:layout_alignRight="@+id/mySwitch"
        android:layout_alignEnd="@+id/mySwitch" />



</RelativeLayout>
